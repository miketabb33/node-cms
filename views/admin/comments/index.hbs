<h1>Comments</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Owner</th>
      <th scope="col">Status</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
      <tr>
        <th scope="row">{{_id}}</th>
        <td>{{user.firstName}} {{user.lastName}}</td>
        <td><input data-id={{_id}} type="checkbox" {{#if allowComment}} checked {{/if}} name="approveComment"></td>
        <td>{{formatDate date}}</td>
        <td>
          <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>