<div class="row">

  <!-- Blog Entries Column -->
  <div class="col-md-8">

    <h1 class="my-4">Home</h1>

    {{#each posts}}
      <div class="card mb-4">
        <img class="card-img-top" style="aspect-ratio: 3/1; object-fit: contain; background-color: rgb(240, 240, 240)" src="{{getImageUrl fileName}}" alt="{{fileName}}">
        <div class="card-body">
          <h2 class="card-title">{{title}}</h2>
          <p class="card-text">{{body}}</p>
          <a href="/show/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
          Posted on {{ formatDate date }}
        </div>
      </div>
    {{/each}}

    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
      {{#paginate current=current pages=pages}}
      {{/paginate}}
      {{!-- <li class="page-item">
        <a class="page-link" href="#">&larr; Older</a>
      </li>
      <li class="page-item disabled">
        <a class="page-link" href="#">Newer &rarr;</a>
      </li> --}}
    </ul>

  </div>
  
  {{> home/sidebar }}
</div>
<!-- /.row -->